// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Category {
  id Int    @id @default(autoincrement())
  name String
  description String?
  firstPic String
  category String
  createdAt DateTime @default(now())
  createdBy Int
  updatedAt DateTime?
  updatedBy Int?
  listing Listing[]
}


model Listing {
  id    Int    @id @default(autoincrement())
  name String
  description String?
  firstPic String
  createdAt DateTime @default(now())
  createdBy Int
  maxPeople Int @default(2)
  updatedAt DateTime?
  updatedBy Int?
  category Category @relation(fields: [idCategory], references: [id])
  idCategory Int
  listingPrice ListingPrice[]
}

model ListingPrice {
  id    Int    @id @default(autoincrement())
  name String
  price Int
  isActive   Boolean  @default(true)
  createdAt DateTime @default(now())
  createdBy Int
  updatedAt DateTime?
  updatedBy Int?
  listing Listing @relation(fields: [listingId], references: [id])
  listingId Int
}
